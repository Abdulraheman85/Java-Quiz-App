<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abdulraheman.quizbee.MainActivity"
    android:background="@drawable/almond"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_85sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:text="JavaQuiz"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_40sdp" />

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@drawable/greenbtn"
        android:text="Start"
        android:textColor="#ffffff"
        android:textSize="@dimen/_20sdp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/inbox"
        android:minHeight="@dimen/_48sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:textColor="#df040b" />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_179sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:background="@drawable/skybtn"
        android:text="About"
        android:textColor="#ffffff"
        android:textSize="@dimen/_20sdp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_95sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:background="@drawable/redbtn"
        android:text="Exit"
        android:textColor="#ffffff"
        android:textSize="@dimen/_20sdp" />
</RelativeLayout>
